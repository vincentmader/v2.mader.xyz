{% extends "simulations/base" %}


{% block content %}

    {{ super() }}

    <script type="module">
        import init, { Simulation } from "../../static/pkg/maderxyz_frontend.js";
        let sim_id = "{{ sim_id }}";
        
        (async () => {
          await init();
        
          var simulation = Simulation.new(sim_id);
          simulation.init();
        
          let N = 1;
          const loop = () => {
            for (let i = 0; i < N; i++) {
              simulation.step();
            }
            requestAnimationFrame(loop);
          };
          loop();
        })();
    </script>

{% endblock content %}
